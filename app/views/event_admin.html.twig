{% extends "base/template.html.twig" %}

{% block content %}
<section id="content">

        <!--start container-->
        <div class="container">

          <div id="profile-page" class="section">
            <!-- profile-page-header -->
            <div id="profile-page-header" class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="/web/img/user-profile-bg.jpg" alt="user background">
                </div>
                <div class="card-content">
                  <div class="row">
                    <div class="col s12 m3 offset-m2 center-align">
                        <h4 class="card-title grey-text text-darken-4">{{ event.name }}</h4>
                        <p class="medium-small grey-text">{{ event.date|date("d, M Y") }}</p>
                    </div>
                    <div class="col s12 m2 center-align">
                        <h4 class="card-title grey-text text-darken-4">{{ event.attending }}</h4>
                        <p class="medium-small grey-text">Attending</p>
                    </div>
                    <div class="col s12 m2 center-align">
                        <h4 class="card-title grey-text text-darken-4">{{ event.maybe }}</h4>
                        <p class="medium-small grey-text">Maybe</p>
                    </div>
                    <div class="col s12 m2 center-align">
                        <h4 class="card-title grey-text text-darken-4">$ 1,253,000</h4>
                        <p class="medium-small grey-text">Ventas</p>
                    </div>
                  </div>
                </div>
            </div>
            <!--/ profile-page-header -->

            <!-- profile-page-content -->
            <div id="profile-page-content" class="row">
              <!-- profile-page-sidebar-->
              <div id="profile-page-sidebar" class="col s12 m4">
                <!-- Profile About  -->
                <div class="card light-blue">
                  <div class="card-content white-text">
                    <span class="card-title">Descripcion</span>
                    <p>{{ event.description }}</p>
                  </div>
                </div>
                <!-- Profile About  -->

                <!-- Profile About  -->
                <div class="card light-blue">
                  <div class="card-content white-text">
                    <span class="card-title">Agenda</span>
                    <a class="white-text" href="/events/{{ event.id }}/schedule"><p>Ver Agenda</p></a>
                  </div>
                </div>
                <!-- Profile About  -->

                <div class="card cyan darken-2">
                  <div class="card-content white-text center-align">
                    <div class="slider">
                      <ul class="slides">
                        {% for img in imgs %}
                          <li>
                            <img src="{{ img.url }}"> <!-- random image -->
                          </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                </div>

                <!-- Profile About  -->
                <div class="card amber darken-2">
                  <div class="card-content white-text center-align">
                    <p class="card-title"><i class="mdi-social-group-add"></i> {{ event.invited }}</p>
                    <p>Invited</p>
                  </div>
                </div>
                <!-- Profile About  -->

                <!-- task-card -->
                <ul id="task-card" class="collection with-header">
                  <li class="collection-header cyan">
                      <h4 class="task-card-title">Pendientes</h4>
                      <p class="task-card-date">March 26, 2015</p>
                  </li>
                  <li class="collection-item dismissable">
                      <input id="task1" type="checkbox">
                      <label style="text-decoration: none;" for="task1">Create Mobile App UI. <a href="#" class="secondary-content"><span class="ultra-small">Today</span></a>
                      </label>
                      <span class="task-cat teal">Mobile App</span>
                  </li>
                  <li class="collection-item dismissable">
                      <input id="task2" type="checkbox">
                      <label style="text-decoration: none;" for="task2">Check the new API standerds. <a href="#" class="secondary-content"><span class="ultra-small">Monday</span></a>
                      </label>
                      <span class="task-cat purple">Web API</span>
                  </li>
                  <li class="collection-item dismissable">
                      <input id="task3" checked="checked" type="checkbox">
                      <label style="text-decoration: line-through;" for="task3">Check the new Mockup of ABC. <a href="#" class="secondary-content"><span class="ultra-small">Wednesday</span></a>
                      </label>
                      <span class="task-cat pink">Mockup</span>
                  </li>
                  <li class="collection-item dismissable">
                      <input id="task4" checked="checked" disabled="disabled" type="checkbox">
                      <label style="text-decoration: line-through;" for="task4">I did it !</label>
                      <span class="task-cat cyan">Mobile App</span>
                  </li>
                </ul>
                <!-- task-card -->

                <!-- Profile Total sell -->
                <div class="card center-align">
                  <div class="card-content purple white-text">
                      <p class="card-stats-title"><i class="mdi-editor-attach-money"></i>Ventas Semanales</p>
                      <h4 class="card-stats-number">$8990.63</h4>
                      <p class="card-stats-compare"><i class="mdi-hardware-keyboard-arrow-up"></i> 70% <span class="purple-text text-lighten-5">a comparacion de la ultima semana</span>
                      </p>
                  </div>
                  <div class="card-action purple darken-2">
                      <div id="sales-compositebar"><canvas height="25" width="286" style="display: inline-block; width: 286px; height: 25px; vertical-align: top;"></canvas></div>
                  </div>
                </div>

                <!-- flight-card -->
                <div id="flight-card" class="card">
                    <div class="card-header amber darken-2">
                        <div class="card-title">
                            <h4 class="flight-card-title">Vuelo Bill Gates</h4>
                            <p class="flight-card-date">Noviembre 18, Thu 04:50</p>
                        </div>
                    </div>
                    <div class="card-content-bg white-text">
                        <div class="card-content">
                            <div class="row flight-state-wrapper">
                                <div class="col s5 m5 l5 center-align">
                                    <div class="flight-state">
                                        <h4 class="margin">LDN</h4>
                                        <p class="ultra-small">London</p>
                                    </div>
                                </div>
                                <div class="col s2 m2 l2 center-align">
                                    <i class="mdi-device-airplanemode-on flight-icon"></i>
                                </div>
                                <div class="col s5 m5 l5 center-align">
                                    <div class="flight-state">
                                        <h4 class="margin">MTY</h4>
                                        <p class="ultra-small">Monterrey</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6 m6 l6 center-align">
                                    <div class="flight-info">
                                        <p class="small"><span class="grey-text text-lighten-4">Depart:</span> 04.50</p>
                                        <p class="small"><span class="grey-text text-lighten-4">Flight:</span> IB 5786</p>
                                        <p class="small"><span class="grey-text text-lighten-4">Terminal:</span> B</p>
                                    </div>
                                </div>
                                <div class="col s6 m6 l6 center-align flight-state-two">
                                    <div class="flight-info">
                                        <p class="small"><span class="grey-text text-lighten-4">Arrive:</span> 08.50</p>
                                        <p class="small"><span class="grey-text text-lighten-4">Flight:</span> IB 5786</p>
                                        <p class="small"><span class="grey-text text-lighten-4">Terminal:</span> C</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- flight-card -->
              </div>
              <!-- profile-page-sidebar-->

              <!-- profile-page-wall -->
              <div id="profile-page-wall" class="col s12 m8">
                <!-- profile-page-wall-share -->
                <div id="profile-page-wall-share" class="row">
                  <div class="col s12">
                    <ul style="width: 100%;" class="tabs tab-profile z-depth-1 light-blue">
                      <li class="tab col s12 m6"><a class="white-text waves-effect waves-light active" href="#UpdateStatus"><i class="mdi-editor-border-color"></i> Blog</a>
                      </li>
                      <li class="tab col s12 m6"><a class="white-text waves-effect waves-light" href="#AddPhotos"><i class="mdi-editor-attach-file"></i> Archivos</a>
                      </li>
                    <div style="right: 545px; left: 0px;" class="indicator"></div></ul>
                    <!-- UpdateStatus-->
                    <div id="UpdateStatus" class="tab-content col s12  grey lighten-4">
                      <form action="/blog/new" method="POST">
                        <div class="row">
                          <div class="col s2">
                            <img src="/web/img/avatar.jpg" alt="" class="circle responsive-img valign profile-image-post">
                          </div>

                          <div class="input-field col s10">
                            <input type="hidden" name="id_event" value="{{ event.id }}">
                            <textarea id="textarea" name="text" row="2" class="materialize-textarea"></textarea>
                            <label for="textarea" class="">Escribir nueva publicacion?</label>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col s12 m6 share-icons">
                            <a href="#"><i class="mdi-image-camera-alt"></i></a>
                            <a href="#"><i class="mdi-action-account-circle"></i></a>
                            <a href="#"><i class="mdi-hardware-keyboard-alt"></i></a>
                            <a href="#"><i class="mdi-communication-location-on"></i></a>
                          </div>
                          <div class="col s12 m6 right-align">
                             <!-- Dropdown Trigger -->
                              <a class="dropdown-button btn" href="#" data-activates="profliePost"><i class="mdi-action-language"></i> Public</a><ul id="profliePost" class="dropdown-content">
                                <li><a href="#!"><i class="mdi-action-language"></i> Public</a></li>
                                <li><a href="#!"><i class="mdi-action-face-unlock"></i> Admins</a></li>
                              </ul>

                              <!-- Dropdown Structure -->


                              <button type="submit" class="waves-effect waves-light btn"><i class="mdi-maps-rate-review left"></i>Publicar</button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <!-- AddPhotos -->
                    <div style="display: none;" id="AddPhotos" class="tab-content col s12  grey lighten-4">
                      <form action="/events/pic" method="POST" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col s2">
                            <img src="/web/img/avatar.jpg" alt="" class="circle responsive-img valign profile-image-post">
                          </div>
                          <div class="file-field input-field">
                            <div class="btn">
                              <span>Archivo</span>
                              <input type="hidden" name="id" value="{{ event.id }}">
                              <input name="image" type="file">
                            </div>
                            <div class="file-path-wrapper">
                              <input class="file-path validate" type="text">
                            </div>
                          </div>
                          <p>Supported formats: jpeg, jpg, png</p>
                        </div>
                        <div class="row">
                          <div class="col s12 m6 share-icons">
                            <a href="#"><i class="mdi-image-camera-alt"></i></a>
                            <a href="#"><i class="mdi-action-account-circle"></i></a>
                            <a href="#"><i class="mdi-hardware-keyboard-alt"></i></a>
                            <a href="#"><i class="mdi-communication-location-on"></i></a>
                          </div>
                          <div class="col s12 m6 right-align">
                             <!-- Dropdown Trigger -->
                              <a class="dropdown-button btn" href="#" data-activates="profliePost2"><i class="mdi-action-language"></i> Public</a><ul id="profliePost2" class="dropdown-content">
                                <li><a href="#!"><i class="mdi-action-language"></i> Public</a></li>
                                <li><a href="#!"><i class="mdi-action-face-unlock"></i> Admins</a></li>
                              </ul>

                              <!-- Dropdown Structure -->


                              <button type="submit" class="waves-effect waves-light btn"><i class="mdi-maps-rate-review left"></i>Publicar</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!--/ profile-page-wall-share -->

                <!-- profile-page-wall-posts -->
                <div id="profile-page-wall-posts" class="row">
                  <div class="col s12">

                      {% for blog in blogs %}
                        <!-- small -->
                        <div id="profile-page-wall-post" class="card">
                          <div class="card-profile-title">
                            <div class="row">
                              <div class="col s1">
                                <img src="images/avatar.jpg" alt="" class="circle responsive-img valign profile-post-uer-image">
                              </div>
                              <div class="col s10">
                                <p class="grey-text text-darken-4 margin">{{ blog.user }}</p>
                                <span class="grey-text text-darken-1 ultra-small">Shared publicly  -  {{ blog.date }}</span>
                              </div>
                              <div class="col s1 right-align">
                                <i class="mdi-navigation-expand-more"></i>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col s12">
                                <p>{{ blog.text }}</p>
                              </div>
                            </div>
                          </div>
                          <div class="card-action row">
                            <div class="col s12 card-action-share">
                              <a href="#">Like</a>
                              <a href="#">Share</a>
                              <a href="/blog/delete/{{ blog.id }}" onclick="confirm('Seguro que deseas borrar?');" >Delete</a>
                            </div>
                          </div>
                        </div>
                      {% endfor %}
                  </div>
                </div>
                <!--/ profile-page-wall-posts -->

              </div>
              <!--/ profile-page-wall -->

            </div>
          </div>
        </div>
        </section>
{% endblock content %}
